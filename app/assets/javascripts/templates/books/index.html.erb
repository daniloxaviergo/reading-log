<!-- page content -->
<div class="right_col" role="main">
  <div class="page-title">
    <div class="title_left">
      <div class="pull-left t-p-md">
        <a ng-href="/new" class="btn btn-default">Novo Book</a>
      </div>
    </div>
    <div class="title_right">
      <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right top_search">
        <div class="input-group">
          <input type="text" class="form-control" placeholder="Search for...">
          <span class="input-group-btn">
            <button class="btn btn-default" type="button">Go!</button>
          </span>
        </div>
      </div>
    </div>
  </div>
  <div class="clearfix"></div>
  <div class="row">

    <div class="col-md-12 col-sm-12 col-xs-12">
      <div class="x_panel" style="height:780px;">
        <div class="x_title">
          <h2>Books</h2>
          <div class="clearfix">
            <div class="col-sm-12">
              <table class="table">
                <thead>
                  <tr>
                    <th class="remove-col"></th>
                    <th class="isbn-col">ISBN</th>
                    <th class="author-col">Author(s)</th>
                    <th class="title-col">Title</th>
                    <th class="price-col">Price</th>
                    <th class="action-col"></th>
                  </tr>
                </thead>
                <tbody>
                  <tr book-row book="book" removebook="removeBook(book)" ng-repeat="book in books"></tr>
                </tbody>
              </table>
            </div>

          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- /page content -->
